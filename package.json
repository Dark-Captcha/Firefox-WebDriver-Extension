{
  "name": "firefox-webdriver-extension",
  "version": "0.1.0",
  "description": "Browser extension powering Firefox WebDriver",
  "author": "GnU-Chan <gnusocute@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dark-Captcha/Firefox-WebDriver-Extension"
  },
  "keywords": [
    "firefox",
    "webdriver",
    "automation",
    "browser",
    "extension"
  ],
  "type": "module",
  "scripts": {
    "all": "npm run type-check && npm run lint && npm run build",
    "build": "npm run clean && npm run build:all && npm run copy-public",
    "build:all": "ENTRY=background vite build && ENTRY=content vite build && ENTRY=popup vite build",
    "dev": "vite build --watch",
    "copy-public": "cp -r public/* dist/",
    "clean": "rm -rf dist && mkdir -p dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "xpi": "npm run build && cd dist && zip -r ../firefox-webdriver-extension-$npm_package_version.xpi ./*"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/firefox-webext-browser": "^143.0.0",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vite": "^7.3.0"
  }
}
